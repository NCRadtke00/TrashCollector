@model WasteCollection.Models.Customer

@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Confirm Trash Pick Up</h1>
<h3>Customer</h3>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Confirm">
            <div asp-validation-summary="ModelOnly" class="text-primary">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="LastName" />
                <input type="hidden" asp-for="FirstName" />
                <input type="hidden" asp-for="StreetAddress" />
                <input type="hidden" asp-for="City" />
                <input type="hidden" asp-for="State" />
                <input type="hidden" asp-for="ZipCode" />
                <input type="hidden" asp-for="PickUpDayId" />
                <input type="hidden" asp-for="AdditionalPickUpDay" />
                <input type="hidden" asp-for="IsAccountSuspended" />
                <input type="hidden" asp-for="AccountSuspendStartDate" />
                <input type="hidden" asp-for="AccountSuspendEndDate" />
                <input type="hidden" asp-for="CurrentAccountBalance" />
                <input type="hidden" asp-for="ZipCode" />
                <input type="hidden" asp-for="IdentityUserId" />
                <p>This will charge the customer $50.00 for this weeks service.</p>

                    <div class="form-group form-check">
                        <label class="col-form-label">
                            <input class="form-check-input" asp-for="ConfirmTrashPickUp" /> @Html.DisplayNameFor(model => model.ConfirmTrashPickUp)
                        </label>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-outline-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div>
        <form asp-action="Index">
            <button type="submit" class="btn btn-outline-success">Back to @DateTime.Today.DayOfWeek </button>
        </form>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
