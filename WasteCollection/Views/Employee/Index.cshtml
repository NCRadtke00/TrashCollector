@model IEnumerable<WasteCollection.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Your route @DateTime.Today</h1>

<form asp-action="Filter" method="get">
    <button type="submit" class="btn btn-outline-info">All Customers</button>
</form>
<br />
<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentAccountBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PickUpDay.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalPickUpDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountSuspendStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountSuspendEndDate)
            </th>
            <th>
                View location
            </th>
            <th>
                Was trash collected
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <th>
                    @Html.DisplayNameFor(model => model.CurrentAccountBalance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PickUpDay.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AdditionalPickUpDay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountSuspendStartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountSuspendEndDate)
                </th>
                <th>
                    <form asp-action="Map" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-outline-success">View location</button>
                    </form>
                </th>
                <th>
                    Was trash collected
                </th>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
