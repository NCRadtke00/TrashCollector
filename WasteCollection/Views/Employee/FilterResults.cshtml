@model WasteCollection.Models.ViewModels.CustomersByPickUpDay
@{
    ViewData["Title"] = "FilterResults";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h1>Client list</h1>
<h3>You can search clients by date here to see what has to be done on any given day!</h3>

<form asp-action="FilterResults" method="post">
    <div class="form-group">
        <label asp-for="DaySelected"></label>
        <select asp-for="DaySelected" class="form-control" asp-items="@Model.DaySelection"></select>
        <span asp-validation-for="DaySelected" class="text-success"></span>
    </div>
    <button type="submit" class="btn btn-success">Search</button>
</form>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Current Account Balance
            </th>
            <th>
                Street Address
            </th>
            <th>
                State
            </th>
            <th>
                City
            </th>
            <th>
                ZipCode
            </th>
            <th>
                Pick Up Day
            </th>
            <th>
                Additional Pick Up Day
            </th>
            <th>
                Account Suspend Start Date
            </th>
            <th>
                Account Suspend End Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.CurrentAccountBalance)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.StreetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.PickUpDay.Date)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.AdditionalPickUpDay)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.AccountSuspendStartDate)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.AccountSuspendEndDate)
                </th>
                <th>
                    <form asp-action="Map" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-success">Customer location</button>
                    </form>
                </th>
            </tr>
        }
    </tbody>
</table>